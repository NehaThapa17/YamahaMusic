<mvc:View controllerName="yamahamusic.so.createso.project.controller.SalesOrdDetailView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.uxap"
    xmlns:chart="sap.suite.ui.microchart"
    xmlns:layout="sap.ui.layout"
    xmlns:forms="sap.ui.layout.form"
    xmlns:m="sap.m" height="100%">
    <m:Shell >
        <m:App >
            <m:pages>
                <m:Page showHeader="true" showNavButton="true" navButtonPress="onNavBackDetail">
                    <m:content>
                        <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="false" showFooter="true">
                            <headerTitle>
                                <ObjectPageDynamicHeaderTitle>
                                    <expandedHeading>
                                        <m:HBox>
                                            <m:Title text="Sales Order Details" wrapping="true"/>
                                        </m:HBox>
                                    </expandedHeading>
                                    <snappedHeading>
                                        <m:FlexBox fitContainer="true" alignItems="Center">
                                            <m:Title text="Sales Order Details" wrapping="true"/>
                                        </m:FlexBox>
                                    </snappedHeading>
                                    <expandedContent>
                                        <m:Text text="1200234"/>
                                    </expandedContent>
                                    <snappedContent>
                                        <m:Text text="1200234"/>
                                    </snappedContent>
                                    <snappedTitleOnMobile>
                                        <m:Title text="1200234"/>
                                    </snappedTitleOnMobile>
                                    <actions>
                                    </actions>
                                </ObjectPageDynamicHeaderTitle>
                            </headerTitle>
                            <headerContent>
                                <m:FlexBox wrap="Wrap">
                                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                        <m:Label text="Sales Area" design="Bold" textDirection="LTR"/>
                                        <m:Text text="" />
                                        <m:Label text="Sales Organization: " design="Bold"></m:Label>
                                        <m:Text text=" 8091" textDirection="RTL"></m:Text>
                                        <m:Label text="Distribution Chanel: " design="Bold"></m:Label>
                                        <m:Text text="Direct Sales(10)"></m:Text>
                                    </layout:VerticalLayout >
                                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                        <m:Label text="Division: " design="Bold"></m:Label>
                                        <m:Text text="00"></m:Text>
                                        <m:Label text="Sold-To-Party: " design="Bold"></m:Label>
                                        <m:Text text=" "></m:Text>
                                        <m:Label text="Order Type: " design="Bold"></m:Label>
                                        <m:Text text="ZB2B"></m:Text>
                                    </layout:VerticalLayout>

                                </m:FlexBox>
                            </headerContent>

                            <sections>
                                <ObjectPageSection titleUppercase="false" title="General Information">
                                    <subSections>
                                        <ObjectPageSubSection title="General Information" titleUppercase="false">
                                            <blocks>
                                                <forms:SimpleForm editable="true" layout="ColumnLayout" class="sapUiSizeCompact">
                                                    <m:Label text="Customer Reference"/>
                                                    <m:Input width="50%" editable="false"/>
                                                    <m:Label text="Customer Reference Date"/>
                                                    <m:DatePicker change="onChangeCRDate" width="50%" editable="false"/>
                                                    <m:Label text="Request Delivery Date"/>
                                                    <m:DatePicker change="onChangeCRDate" width="50%" editable="false"/>
                                                    <m:Label text="Ship-to-party" />
                                                    <m:Input value="TBS010002" editable="false" showValueHelp="true" description="The Brass Music Specialists"/>

                                                </forms:SimpleForm>
                                            </blocks>
                                        </ObjectPageSubSection>
                                    </subSections>
                                    <subSections>
                                        <ObjectPageSubSection title="Partner" titleUppercase="false">
                                            <blocks>
                                                <forms:SimpleForm editable="true" layout="ColumnLayout" class="sapUiSizeCompact">
                                                    <m:Label text="Bill-to-party"/>
                                                    <m:Input value="TBS010002" editable="false" showValueHelp="true" description="Just for Reference"/>
                                                    <m:Label text="Payer"/>
                                                    <m:Input valueHelpOnly="true" editable="false" width="50%" showValueHelp="true"/>
                                                </forms:SimpleForm>
                                            </blocks>
                                        </ObjectPageSubSection>
                                    </subSections>
                                    <subSections>
                                        <ObjectPageSubSection title="Sales" titleUppercase="false">
                                            <blocks>
                                                <forms:SimpleForm editable="true" layout="ColumnLayout" class="sapUiSizeCompact">
                                                    <m:Label text="Payment Terms"/>
                                                    <m:Input valueHelpOnly="true" width="50%" editable="false"/>
                                                    <m:Label text="Inco Location"/>
                                                    <m:Input valueHelpOnly="true" width="50%" editable="false"/>
                                                    <m:Label text="Inco Terms"/>
                                                    <m:Input valueHelpOnly="true" width="50%" editable="false"/>
                                                    <m:Label text="Total Weight"/>
                                                    <m:Input valueHelpOnly="true" width="50%" editable="false"/>
                                                    <m:Label text="Net Value"/>
                                                    <m:Input valueHelpOnly="true" width="50%" editable="false"/>
                                                </forms:SimpleForm>
                                            </blocks>
                                        </ObjectPageSubSection>
                                    </subSections>
                                </ObjectPageSection>

                                <ObjectPageSection titleUppercase="false" showTitle="false">
                                    <subSections>
                                        <ObjectPageSubSection title="Items" titleUppercase="false">
                                            <m:Table headerText="Sales Order Items">
                                                <m:headerToolbar>
                                                    <m:OverflowToolbar>
                                                        <m:content>
                                                            <m:Title text="Sales Order Items" level="H2"/>
                                                            <m:ToolbarSpacer />
                                                            <!-- <m:Button text="Create Sales Order" type="Emphasized"/> -->
                                                        </m:content>
                                                    </m:OverflowToolbar>
                                                </m:headerToolbar>
                                                <m:columns>
                                                    <m:Column minScreenWidth="Tablet"  demandPopin="true">
                                                        <m:header>
                                                            <m:Text text="Item" />
                                                        </m:header>
                                                    </m:Column>
                                                    <m:Column minScreenWidth="Tablet"  demandPopin="true" hAlign="Center">
                                                        <m:header>
                                                            <m:Text text="Material" />
                                                        </m:header>
                                                    </m:Column>
                                                    <m:Column minScreenWidth="Tablet" demandPopin="true"  hAlign="End">
                                                        <m:header>
                                                            <m:Text text="Material Description" />
                                                        </m:header>
                                                    </m:Column>
                                                    <m:Column minScreenWidth="Tablet" demandPopin="true"  hAlign="Center">
                                                        <m:header>
                                                            <m:Text text="Order Quantity" />
                                                        </m:header>
                                                        <!-- <m:footer>
                                                        <m:Input value="EUR" />
                                                        </m:footer> -->
                                                    </m:Column>
                                                    <m:Column minScreenWidth="Tablet" demandPopin="true"  hAlign="Center">
                                                        <m:header>
                                                            <m:Text text="Requested Delivery Date" />
                                                        </m:header>
                                                    </m:Column>

                                                    <m:Column minScreenWidth="Tablet" demandPopin="true"  hAlign="Center">
                                                        <m:header>
                                                            <m:Text text="Net Value" />
                                                        </m:header>
                                                    </m:Column>
                                                    <m:Column hAlign="Center" >
                                                        <m:header>
                                                            <m:Text text="Plant" />
                                                        </m:header>
                                                    </m:Column>
                                                </m:columns>
                                                <m:ColumnListItem>
                                                    <m:Text text="10" />
                                                    <m:Text text="AAC0860" />
                                                    <m:Text text="Text Description of the material" wrapping="true"/>
                                                    <m:ObjectNumber number="1" unit="EA" />
                                                    <m:Text text="18.05.2022" />
                                                    <m:Text text="" />
                                                    <m:Text text="8091" />
                                                </m:ColumnListItem>
                                            </m:Table>
                                        </ObjectPageSubSection>
                                    </subSections>
                                </ObjectPageSection>
                            </sections>
                        </ObjectPageLayout>
                    </m:content>
                </m:Page>
            </m:pages>
        </m:App>
    </m:Shell>
</mvc:View>
